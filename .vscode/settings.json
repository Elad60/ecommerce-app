{
  // Enable semantic highlighting for functions, variables, classes, etc.
  "editor.semanticHighlighting.enabled": true,

  // TypeScript settings
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",

  // Editor settings for better code visibility
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "[Default Dark Modern]": {
      "enabled": true,
      "rules": {
        "function": "#DCDCAA",
        "method": "#DCDCAA",
        "variable": "#9CDCFE",
        "parameter": "#9CDCFE",
        "property": "#9CDCFE",
        "class": "#4EC9B0",
        "interface": "#4EC9B0",
        "type": "#4EC9B0",
        "namespace": "#4EC9B0"
      }
    },
    "[Default Light Modern]": {
      "enabled": true,
      "rules": {
        "function": "#795E26",
        "method": "#795E26",
        "variable": "#001080",
        "parameter": "#001080",
        "property": "#001080",
        "class": "#267F99",
        "interface": "#267F99",
        "type": "#267F99",
        "namespace": "#267F99"
      }
    }
  },

  // Format on save
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // Angular language service
  "angular.enable-strict-mode-prompt": false,

  // Prettier settings
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
